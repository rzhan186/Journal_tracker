import spacy

# Load English tokenizer, tagger, parser, NER, and POS tagger
nlp = spacy.load("en_core_web_sm")

def extract_keywords(input_text):
    doc = nlp(input_text)
    keywords = [token.text for token in doc if not token.is_stop and not token.is_punct]
    return keywords

def refine_query(user_input):
    # Extract keywords
    keywords = extract_keywords(user_input)
    
    # Construct query assuming you want the keywords in a certain format
    if keywords:
        query = " OR ".join([f'"{kw}"[Title/Abstract]' for kw in keywords])
        return query
    else:
        return ""

topic = input("Enter a topic: ")
keywords_query = refine_query(topic)
print(keywords_query)